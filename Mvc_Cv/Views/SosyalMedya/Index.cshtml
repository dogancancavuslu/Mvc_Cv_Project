@using Mvc_Cv.Models.Entity
@model  List<TblSosyalMedya>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Sosyal Medya</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <button class="btn btn-info" data-toggle="modal" data-target="#Modal1">Yeni Sosyal Medya Hesabı Ekle</button>
                                <br />
                                <br />
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Ad</th>
                                            <th>Link</th>
                                            <th>İkon</th>
                                            <th>Durum</th>
                                            <th>Düzenle - Sil</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@item.Ad</td>
                                                <td>@item.Link</td>
                                                <td>@item.ikon</td>
                                                <td>@item.Durum</td>
                                                <td>
                                                    <a class="btn btn-info btn-sm" href="/SosyalMedya/SayfaGetir/@item.ID">
                                                        <i class="fas fa-pencil-alt"></i>
                                                    </a>
                                                    <a class="btn btn-danger btn-sm" href="/SosyalMedya/Sil/@item.ID">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>

                                </table>
                                <br />      
                                <p style="font-size:10px"> * İkonları <a href="https://fontawesome.com/">fontawesome.com</a> adresinden alabilirsiniz. </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->

        <div class="modal" id="Modal1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header"> <h2 class="modal-title">Hesap Ekleme Penceresi</h2>  </div>
                    <form  method="post" action="/SosyalMedya/Ekle">
                        <div class="modal-body">
                            <label> Sosyal Medya İsmi</label>
                            <input type="text" name="Ad" class="form-control" />
                            <br />
                            <label> Link</label>
                            <input type="text" name="link" class="form-control" />
                            <br />
                            <label> ikon</label>
                            <input type="text" name="ikon" class="form-control" />
                            <br />  
                            <button class="btn btn-info">KAYDET</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>


